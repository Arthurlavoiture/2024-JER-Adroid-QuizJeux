<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".main.GameActivity">

    <TextView
        android:id="@+id/questionTextView"
        android:layout_width="711dp"
        android:layout_height="wrap_content"
        android:text="Nom du joueur"
        android:textSize="24sp" />




    <Button
        android:id="@+id/buttonappuyer1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         />

    <TextView
        android:id="@+id/questionTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Question joueur 2"
        android:textSize="24sp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@+id/buttonPlayer1"
        android:rotation="180" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <Button
            android:id="@+id/buttonPlayer1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Paris" />

        <Button
            android:id="@+id/buttonPlayer2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="London" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Question joueur 1"
        android:gravity="center"
        android:textSize="24sp" />

    <Button
        android:id="@+id/buttonappuyer1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
</LinearLayout>